<!doctype html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <title>LifeLinkr</title>
    <%-include('../header');  -%>
     



            <!-- content -->
            <div class="container-fluid">

                <!-- charts -->
                <div class="col-lg-12 pl-lg-0 mt-2">
                    <h4 class="primary">Add Clinic</h4>
                </div>
                <div class="chart">
                    <div class="row">

                        <div class="col-lg-12 pl-lg-2 chart-grid mt-1">
                            <!--part 1-->
                            <div class="card card_border">
                                <div class="">
                                    <div class="col-xl-12 pr-xl-2 p-heading">
                                        <h6 class="p-text">Clinic Profile</h6>
                                    </div>

                                    <div class="col-xl-12 pr-xl-2 mb-4">
                                        <form id="addCliniForm" enctype="multipart/form-data" class="mt-2" >
                                            <input type="hidden" name="query" id="query" value="0">
                                            <div id="errordiv"></div>
                                            <div class="row">
                                                <div class="col-xl-3 pr-xl-2">
                                                    <div class="form-group">
                                                        <label for="code" class="input__label">Code*</label>
                                                        <input type="text" class="form-control input-style" id="code" name="code"
                                                               placeholder="" data-validation="required" data-error-message="Code is required">
                                                    </div>
                                                </div>
                                    
                                                <div class="col-xl-3 pr-xl-2">
                                                    <div class="form-group">
                                                        <label for="clinicName" class="input__label">Clinic Name*</label>
                                                        <input type="text" class="form-control input-style" id="name" name="name"
                                                               placeholder="" data-validation="required" data-error-message="Clinic name is required">
                                                    </div>
                                                </div>
                                    
                                                <div class="col-xl-3 pr-xl-2">
                                                    <div class="form-group">
                                                        <label for="contactNoPrimary" class="input__label">Contact No (Primary)*</label>
                                                        <input type="number" class="form-control input-style" id="contactNoPrimary" name="contactNoPrimary"
                                                               placeholder="" data-validation="required mobileNum" data-error-message="Primary contact number is required">
                                                    </div>
                                                </div>
                                    
                                                <div class="col-xl-3 pr-xl-2">
                                                    <div class="form-group">
                                                        <label for="contactNoSecondary" class="input__label">Contact No (Secondary)</label>
                                                        <input type="number" class="form-control input-style" id="contactNoSecondary" name="contactNoSecondary" data-validation="mobileNum"
                                                               placeholder="">
                                                    </div>
                                                </div>
                                    
                                                <div class="col-xl-3 pr-xl-2">
                                                    <div class="form-group">
                                                        <label for="email" class="input__label">Email</label>
                                                        <input type="email" class="form-control input-style" id="email" name="email" data-validation="email" 
                                                               placeholder="">
                                                    </div>
                                                </div>
                                    
                                                <div class="col-xl-3 pr-xl-2">
                                                    <div class="form-group">
                                                        <label for="openingDays" class="input__label">Opening Days</label>
                                                        <select class="form-control input-style" data-validation="" data-error-message="Opening Days is required" id="openingDays" name="openingDays">
                                                            <option value="">Select</option>
                                                            <option value="Weekdays">Weekdays (Monday to Friday)</option>
                                                            <option value="Weekend">Weekend (Saturday and Sunday)</option>
                                                            <option value="Everyday">Everyday (Monday to Sunday)</option>
                                                            <!-- <option value="Custom">Custom</option> -->
                                                        </select>
                                                        
                                                    </div>
                                                </div>
                                    
                                                <div class="col-xl-3 pr-xl-2">
                                                    <div class="form-group">
                                                        <label for="timing" class="input__label">Timing</label>
                                                        <input type="time" class="form-control input-style" id="timing" name="timing" data-validation="" data-error-message="Timing is required">
                                                    </div>
                                                </div>
                                    
                                                <div class="col-xl-3">
                                                    <div class="form-group">
                                                        <label for="logo" class="input__label">Logo</label>
                                                        <img id="displayimg" alt="" src="../MyUploads/<%=data.logo%>" style="max-width: 350px; max-height: 150px;">
                                                        <input type="file" class="form-control input-style" id="logo" name="logo" data-validation="" data-error-message="Logo is required">
                                                    </div>
                                                </div>
                                    
                                                <div class="col-xl-6 pr-xl-2">
                                                    <div class="form-group">
                                                        <label for="address" class="input__label">Address</label>
                                                        <input type="text" class="form-control input-style" id="address" name="address"data-validation="" data-error-message="Address is required">
                                                    </div>
                                                </div>
                                            </div>
                                            <div id="loadingIndicator"></div>
                                            <div class="text-right">
                                                <button type="button" onclick="updateQuery()" id="mod-btn" class="btn btn-primary btn-style mt-3 mr-3"><i class="fa-regular fa-pen-to-square"></i> Modify</button>
                                                <button type="button"  onclick=" window.location.href = '/clinics'" class="btn btn-danger btn-style mt-3 mr-3"><i class="fas fa-times"></i> Cancel</button>
                                                <button type="submit" id="sub-btn" class="btn btn-primary btn-style mt-3"><i class="far fa-save"></i> Save</button>
                                            </div>
                                        </form>
                                    </div>
                                    

                                </div>
                            </div>
                            <!--part 1 ended-->

                        </div>
                    </div>
                </div>
                <!-- //charts -->
            </div>


            <%-include('../footer');  -%>
            <script>
                function updateQuery(){
       document.getElementById('query').value=1;
       $('#mod-btn').prop('disabled', true);   
       $('input, select').prop('disabled', false);
       $('#code').prop('readonly', true);
       document.getElementById('sub-btn').disabled = false;
     }
            
   if('<%= data.id %>'!==''){
       $('input[data-validation], select').prop('disabled', true);
       document.getElementById('sub-btn').disabled = true;
       document.getElementById('mod-btn').disabled = false;
       document.getElementById('code').value='<%=data.code%>'
       document.getElementById('name').value='<%=data.name%>'
       document.getElementById('contactNoPrimary').value='<%=data.contactNoPrimary%>'
       document.getElementById('contactNoSecondary').value='<%=data.contactNoSecondary%>'
       document.getElementById('email').value='<%=data.email%>'
       document.getElementById('openingDays').value='<%=data.openingDays%>'
       document.getElementById('timing').value='<%=data.timing%>'
       document.getElementById('address').value='<%=data.address%>'
       document.getElementById('logo').value='<%=data.logo%>'
       
     }else{
     
       document.getElementById('mod-btn').disabled = true;
     }
           </script>

            <script>
                $(document).ready(function () {
                    console.log("Document is ready");
                    const formId = '#addCliniForm'
                    $(formId).on('submit', function (event) {
                        event.preventDefault();
                        const { isValid, errorMessage } = validateForm(formId);
                        const errorDivId = '#errordiv';

                        if (isValid) {
                            const url = '/saveClinic';
                            const loadingDiv = '#loadingIndicator';
                            const formData = new FormData(this);


                            for (const [key, value] of formData.entries()) {
                                console.log(key, value);
                            }

                            saveFormImg(formData, errorDivId, url, loadingDiv);
                        } else {
                            $(errorDivId).removeClass('alert-success').addClass('alert-danger').text(errorMessage).show();
                        }
                    });

                });


            </script>