<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta
      name="viewport"
      content="width=device-width, initial-scale=1, shrink-to-fit=no"
    />

    <title>LifeLinkr</title>
    <%-include('../header'); -%>

    <!-- content -->
    <div class="container-fluid">
      <!-- charts -->
      <div class="col-lg-12 pl-lg-0 mt-2">
        <h4 class="primary">Add Purchase Client</h4>
      </div>
      <div class="chart">
        <div class="row">
          <div class="col-lg-12 pl-lg-2 chart-grid mt-1">
            <!--part 1-->
            <div class="card card_border">
              <div class="">
                <div class="col-xl-12 pr-xl-2 p-heading">
                  <h6 class="p-text">Add Client</h6>
                </div>

                <div class="col-xl-12 pr-xl-2 mb-4">
                  <form id="clientForm" method="post" class="mt-2">
                    <input type="hidden" name="query" id="query" value="0" />
                    <div id="errordiv"></div>
                    <div class="row">
                      <div class="col-xl-4 col-xs-6 pr-xl-2">
                        <div class="form-group">
                          <label for="exampleInputEmail1" class="input__label"
                            >Code*</label
                          >
                          <input
                            type="text"
                            class="form-control input-style"
                            id="code"
                            name="code"
                            data-validation="required"
                            data-error-message="Code is required"
                            placeholder=""
                          />
                        </div>
                      </div>

                      <div class="col-xl-4 col-xs-6 pr-xl-2">
                        <div class="form-group">
                          <label class="input__label">Party Name*</label>
                          <input
                            type="text"
                            class="form-control input-style"
                            id="name"
                            name="name"
                            data-validation="required"
                            data-error-message="Description is required"
                            placeholder=""
                          />
                        </div>
                      </div>
                      <div class="col-xl-4 col-xs-6 pr-xl-2">
                        <div class="form-group">
                          <label class="input__label"
                            >Supply of which item*</label
                          >
                          <select
                            name="supplyItem"
                            id="supplyItem"
                            class="form-control input-style"
                            data-validation="required"
                            data-error-message="Supply of which item is required"
                          >
                            <option value="">Select</option>
                            <option value="Medicine/Injection">
                              Medicine/Injections
                            </option>
                            <option value="Test">Test</option>
                            <option value="Both">Both</option>
                          </select>
                        </div>
                      </div>
                      <div class="col-xl-4 col-xs-6 pr-xl-2">
                        <div class="form-group">
                          <label class="input__label"
                            >Drug Licence No Old</label
                          >
                          <input
                            type="text"
                            class="form-control input-style"
                            id="drugLicNoOld"
                            name="drugLicNoOld"
                            data-validation=""
                            data-error-message="Description is required"
                            placeholder=""
                          />
                        </div>
                      </div>
                      <div class="col-xl-4 col-xs-6 pr-xl-2">
                        <div class="form-group">
                          <label class="input__label">Address</label>
                          <input
                            type="text"
                            class="form-control input-style"
                            id="address"
                            name="address"
                            data-validation=""
                            data-error-message="Description is required"
                            placeholder=""
                          />
                        </div>
                      </div>
                      <div class="col-xl-4 col-xs-6 pr-xl-2">
                        <div class="form-group">
                          <label class="input__label">GSTÂ No</label>
                          <input
                            type="text"
                            class="form-control input-style"
                            id="gstNo"
                            name="gstNo"
                            data-validation=""
                            data-error-message="Description is required"
                            placeholder=""
                          />
                        </div>
                      </div>
                      <div class="col-xl-4 col-xs-6 pr-xl-2">
                        <div class="form-group">
                          <label class="input__label"
                            >Drug Licence No New</label
                          >
                          <input
                            type="text"
                            class="form-control input-style"
                            id="drugLicNoNew"
                            name="drugLicNoNew"
                            data-validation=""
                            data-error-message="Description is required"
                            placeholder=""
                          />
                        </div>
                      </div>
                      <div class="col-xl-4 col-xs-6 pr-xl-2">
                        <div class="form-group">
                          <label class="input__label">Validity</label>
                          <input
                            type="date"
                            class="form-control input-style"
                            id="validity"
                            name="validity"
                            data-validation=""
                            data-error-message="Description is required"
                            placeholder=""
                          />
                        </div>
                      </div>
                      <div class="col-xl-4 col-xs-6 pr-xl-2">
                        <div class="form-group">
                          <label class="input__label">NABL Lab No</label>
                          <input
                            type="text"
                            class="form-control input-style"
                            id="nablLabNo"
                            name="nablLabNo"
                            data-validation=""
                            data-error-message="Description is required"
                            placeholder=""
                          />
                        </div>
                      </div>
                    </div>
                    <div id="loadingIndicator"></div>
                    <div class="text-right">
                      <button
                        type="button"
                        onclick="updateQuery()"
                        id="mod-btn"
                        class="btn btn-primary btn-style mt-3 mr-3"
                      >
                        <i class="fa-regular fa-pen-to-square"></i> Modify
                      </button>
                      <button
                        type="button"
                        onclick=" window.location.href = '/purchaseClient'"
                        class="btn btn-danger btn-style mt-3 mr-3"
                      >
                        <i class="fas fa-times"></i> Cancel
                      </button>
                      <button
                        type="submit"
                        id="sub-btn"
                        class="btn btn-primary btn-style mt-3"
                      >
                        <i class="far fa-save"></i> Save
                      </button>
                    </div>
                  </form>
                </div>
              </div>
            </div>
            <!--part 1 ended-->
          </div>
        </div>
      </div>
      <!-- //charts -->
    </div>

    <%-include('../footer'); -%>
    <script>
      function updateQuery() {
        document.getElementById("query").value = 1;
        $("#mod-btn").prop("disabled", true);
        $("input, select").prop("disabled", false);
        $("#code").prop("disabled", true);
        document.getElementById("sub-btn").disabled = false;
      }

      if ("<%= data.id %>" !== "") {
        $("input[data-validation], select").prop("disabled", true);
        document.getElementById("sub-btn").disabled = true;
        document.getElementById("mod-btn").disabled = false;
        document.getElementById("code").value = "<%=data.code%>";
        document.getElementById("name").value = "<%=data.name%>";
        document.getElementById("supplyItem").value = "<%=data.supplyItem%>";
        document.getElementById("drugLicNoOld").value =
          "<%=data.drugLicNoOld%>";
        document.getElementById("drugLicNoNew").value =
          "<%=data.drugLicNoNew%>";
        document.getElementById("validity").value = "<%=data.validity%>";
        document.getElementById("nablLabNo").value = "<%=data.nablLabNo%>";
        document.getElementById("address").value = "<%=data.address%>";
        document.getElementById("gstNo").value = "<%=data.gstNo%>";
      } else {
        document.getElementById("mod-btn").disabled = true;
      }
    </script>

    <script>
      $(document).ready(function () {
        console.log("Document is ready");
        const formId = "#clientForm";
        $(formId).on("submit", function (event) {
          event.preventDefault();
          const { isValid, errorMessage, formData } = validateForm(formId);
          const errorDivId = "#errordiv";

          if (isValid) {
            const url = "/savePurchaseClient";
            const loadingDiv = "#loadingIndicator";
            console.log("1");
            console.log("sd", formData);

            saveForm(formData, errorDivId, url, loadingDiv);
          } else {
            $(errorDivId)
              .removeClass("alert-success")
              .addClass("alert-danger")
              .text(errorMessage)
              .show();
          }
        });
      });
    </script>
    <script>
      $(document).ready(function () {
        // Function to enable/disable fields based on supply item selection
        function toggleFields() {
          const supplyItem = $("#supplyItem").val();

          // Enable/disable Drug License No based on supply item
          if (supplyItem === "Medicine/Injection" || supplyItem === "Both") {
            $("#drugLicNo").prop("disabled", false);
          } else {
            $("#drugLicNo").prop("disabled", true).val("");
          }

          // Enable/disable NABL Lab No based on supply item
          if (supplyItem === "Test" || supplyItem === "Both") {
            $("#nablLabNo").prop("disabled", false);
          } else {
            $("#nablLabNo").prop("disabled", true).val("");
          }
        }

        // Call toggleFields on page load
        toggleFields();

        // Attach change event to supplyItem dropdown
        $("#supplyItem").on("change", toggleFields);
      });
    </script>
  </head>
</html>
